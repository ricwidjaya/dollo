<div class='card mx-auto'>
  <form class='row g-3 card-body'>
    <h2 class='text-center'>Sign in to Dollo</h2>
    <div class='col-12'>
      <label for='inputEmail' class='form-label'>Email</label>
      <input
        type='email'
        class='form-control'
        id='inputEmail'
        name='email'
        autofocus
        required
      />
    </div>

    <div class='col-12'>
      <label for='inputPassword' class='form-label'>Password</label>
      <input
        type='password'
        class='form-control'
        id='inputPassword'
        name='password'
        required
      />
    </div>

    <div class='d-grid gap-2'>
      <button class='btn btn-outline-dark' type='submit'>Sign In</button>
      <small class='text-center'>Or sign in with</small>
      <a class='btn btn-outline-dark' type='button'><i
          class='fa-brands fa-facebook-f'
        ></i>
        Facebook</a>
      <a class='btn btn-outline-dark' type='button'><i
          class='fa-brands fa-google'
        ></i>
        Google</a>
    </div>
    <p class='text-center'>Don't have an account?
      <a href='/signup' class='btn-link'>Sign Up</a></p>
  </form>
</div>