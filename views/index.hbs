<div class='container-fluid main'>
  <h1>Good Evening, <span id='name'>Richard</span>.</h1>
  <div class='row justify-content-evenly mt-4 mb-4'>
    <div class='col-6'>
      {{!-- Announcement --}}
      <div class='card'>
        <div class='card-body'>
          <p class='card-title'><i class="fa-solid fa-bullhorn card-icon"></i> Announcements<p>
            
            {{#ifCon role 'manager'}}
            <a 
              class="btn add-task" 
              href="/announcements/new">
                <i class="fa-solid fa-plus card-icon"></i>
            </a>
            {{else}}
            <a 
              class="btn add-task" 
              data-bs-toggle="modal" 
              data-bs-target="#announceModal">
              <i class="fa-solid fa-plus card-icon"></i>
            </a>
            {{/ifCon}}

            <!-- Announce Modal -->
            <div class="modal fade" id="announceModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">What's the News?</h5>
                  </div>
                  <div class="modal-body">
                    
                    <div class="mb-3">
                      <input type="text" class="form-control" id="announce-title" placeholder="Title">
                    </div>
                    <div class="mb-3">
                      <input type="text" class="form-control" id="announce-content" placeholder="Share it to the team.">
                    </div>
                    <div class="d-flex justify-content-md-end">
                      <button id="announceBtn" data-bs-dismiss="modal" class="btn btn-danger align-self-end">Announce</button>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          
          <div id="announces" class="card-list">
            {{!-- Announce Content --}}
          </div>
        </div>
      </div>
    </div>
    <div class='col-3'>
      {{!-- To-do --}}
      <div class='card'>
        <div class='card-body'>
            <p class='card-title'><i class="fa-brands fa-creative-commons-nd card-icon"></i> To-dos<p>
            <a class="btn add-task" data-bs-toggle="modal" data-bs-target="#taskModal">
              <i class="fa-solid fa-plus card-icon"></i>
            </a>

            <!-- Todo Modal -->
            <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Task</h5>
                  </div>
                  <div class="modal-body">
                    
                    <div class="mb-3">
                      <input type="text" class="form-control" id="task-name" placeholder="Next To-Do">
                    </div>
                    <div class="d-flex justify-content-md-end">
                      <button id="addBtn" data-bs-dismiss="modal" class="btn btn-danger align-self-end">Add Task</button>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>

          <div id="todos" class="card-list">
            {{!-- Render to-do list --}}
          </div>
        </div>
      </div>
    </div>
    <div class='col-3'>
      {{!-- Done --}}
      <div class='card'>
        <div class='card-body'>
          <p class='card-title'><i class="fa-solid fa-circle-check card-icon"></i> Done<p>
          
          <div id="done-tasks" class="card-list">
          {{!-- Render done list --}}
          
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class='row justify-content-evenly'>
    <div class='col-6'>
      {{!-- Event --}}
      <div class='card'>
        <div class='card-body'>
          <p class='card-title'><i class="fa-solid fa-people-robbery card-icon"></i> Incoming Events<p>
          
          {{!-- Event Content --}}
          <div id="events" class="card-list">
            <div class="announce-list mb-2">
              <h6 class='card-subtitle mb-2 text-muted'>Dodo as a service</h6>
              <div class="d-flex justify-content-between">
                <small>
                  <span>RW</span>
                </small>
                <small class="datetime">2022/4/1 13:30</small>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-6'>
      {{!-- Fire Camp --}}
      <div class='card'>
        <div class='card-body'>
          <p class='card-title'><i class="fa-solid fa-fire card-icon"></i> Happening Fire Camp<p>
          <hr />
          <div id="fire-camps"" class="card-list">
            {{!-- Fire Camp Content--}}
            <div class="firecamp-list mb-2">
              <h6 class='card-subtitle'>Card subtitle</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>